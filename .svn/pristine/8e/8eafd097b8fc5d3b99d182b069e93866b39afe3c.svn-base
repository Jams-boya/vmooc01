<div class="row signModal">
  
  <div class="signupContent">
    <div class="bg">
      <img src="/images/jjfa.png">
    </div>
    <div class="formdiv">
      <form id='formSignin' class="form-signin col-md-4" action='/signin' method='post'>
        {{#if error}}
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 10px">
            <div class="alert alert-warning">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <strong>{{error}}</strong>
            </div>
          </div>
        </div>
        {{/if}}
        <h5 class="form-signin-heading" style="font-size: 16px;padding:20px 0px;font-weight: lighter">登录</h5>
        <div class="row" style="margin-bottom: 20px">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="position: relative">
            <span class="input-icon fa fa-envelope-o input-group-addon"></span>
            <input style="float: left;width: 86%" type="text" id="username" name="username" class="form-control
             " placeholder="邮箱" autofocus="">
          </div>
        </div>

        <div class="row" style="margin-bottom: 20px">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <span class="input-icon fa fa-key input-group-addon"></span>
            <input style="float: left;width: 86%" type="password" id="password" name="password" class="form-control
             " placeholder="密码" required="">
          </div>
        </div>
        <div class="checkbox" style="margin: 20px 0px 10px 0px">
          <label>
              <input type="checkbox" name='remember' value="remember-me" checked> 自动登录
          </label> 
          <a href="{{config.userUrl}}/lostpasswordentry" style="font-size: 14px;color: #76A7E2;float: right;cursor: pointer">忘记密码?</a>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" style="background-color: #2C9AF5">登录</button>
        <div style="margin: 12px 0;float: left">
          <a href='{{config.mhpUrl}}/signin'>马后炮账号登录</a>
        </div>
        <div class="checkbox" style="margin: 12px 0">
          <a href="{{config.userUrl}}/signup/company" style="font-size: 12px;color: #76A7E2;float: right;cursor: pointer">免费注册>></a>
          <label style="font-size: 12px;float: right;cursor: pointer;margin-right: 5px">
              无账号
          </label>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('.navul').html('<li><a href="/">登录</a></li>');
    $('.p_index_logo').attr('src', '/images/logo2.png');
    $('.couslin').hide();
    $('.sear').hide();
  });
</script>