.banner
{
	font-family: "Microsoft YaHei";
	background: #274572;
	min-width: 1300px;
	overflow: hidden;
}
.banner .bandiv
{
	position: relative;
	width: 1366px;
	margin: auto;
}
.banner img
{
	width: 100%;
}
.banner .bancondiv
{
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0px;
}
.banner .bancon
{
	margin: auto;
	height: 100%;
	position: relative;
	min-width: 1000px;
}
.banner .bancon .banload
{
	color: white;
	font-size: 14px;
	position: absolute;
	top: 20px;
	left: 20px;
}
.banner .bancon .banload a
{
	color: white;
	text-decoration: none;
}
.banner .bancon .share
{
	position: absolute;
	right: 20px;
	top: 40px;
	font-size: 14px;
}
.banner .bancon .share img
{
	width: 22px;
	height: 20px;
	margin-left: 20px;
	margin-top: -2px;
	cursor: pointer;
}
.banner .bancon .share a
{
	color: white;
	text-decoration: none;
}
.banner .bancon .banimg
{
	width: calc(100% - 60px);
	width: -moz-calc(100% - 60px);
	width: -webkit-calc(100% - 60px);
	width: -ms-calc(100% - 60px);
	position: absolute;
	top: 20%;
	right: 20px;
	border: 12px solid white;
	border-top: none;
}

.banner .bancon .banimgtitle
{
	width: 100%;
	text-align: center;
	margin-top: -14px;
}
.banner .bancon .banimgtitle .divbor
{
	height: 12px;
	background: white;
	margin-top: 14px;
}
.banner .bancon .banimgtitle .divbor:first-child
{
	float: left;
}
.banner .bancon .banimgtitle .divbor:nth-child(2)
{
	float: right;
}

.banner .bancon .banimg img
{
	width: 100%;
}
.banner .bancon .bantitle
{
	text-align: center;
	color: white;
	font-size: 38px;
	font-weight: 600;
	height: 40px;
	line-height: 40px;
}
.banner .bancon .bantxt
{
	width: 80%;
	margin: auto;
	left: 10%;
	color: white;
	font-size: 18px;
	line-height: 200%;
	margin-top: 60px;
	margin-bottom: 60px;
}
.banner .bancon .staspan
{
	position: absolute;
	right: 0;
	top: -24px;
	font-size: 12px;
	color: white;
}
.banner .bancon .banmonery
{
	font-family:"Mircosoft Yahei";
	position: absolute;
	color: red;
	font-size: 34px;
	font-weight: 600;
	text-align: center;
	margin-left: -6px;
	bottom: 20%;
	width: 100%;
}
.banner .bancon .buybtn
{
	font-family:"Mircosoft Yahei";
	position: absolute;
	width: 130px;
	height: 50px;
	text-align: center;
	line-height: 50px;
	margin: auto;
	font-size: 18px;
	font-weight: 600;
	color: white;
	background: red;
	border-radius: 4px;
	cursor: pointer;
	bottom: 6%;
	left: calc(50% - 52px);
}
