<form id='formSignup' class="form-signup" action='/signup/invite' method='post'>
    {{#if error}}
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{error}}
    </div>
    {{/if}}
    <div id='errplaceholder'></div>

    <h2 class="form-signin-heading row">新用户注册 - 个人信息</h2>

    <div class="form-group row">
        <label for="username">真实姓名：</label>
        <input id="username" name="username" type="text" placeholder="真实姓名" class="form-control" required="" autofocus="">
    </div>
    <div class="form-group row">
        <label for="password">密码：</label>
        <input id="password" name="password" type="password" placeholder="密码" class="form-control" required="" autofocus="">
    </div>
    <div class="form-group row">
        <label for="password2">密码确认：</label>
        <input id="password2" name="password2" type="password" placeholder="密码确认" class="form-control" required="" autofocus="">
    </div>

    <div class="form-group row">
        <button class="btn btn-primary btn-sm col-md-4 col-md-offset-4" type="submit">注册</button>
    </div>
</form>

{{#section 'appjs'}}
    <script src="/script/sign/signup_invite.js"></script>
{{/section}}





