<html lang="zh">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="aplus-rate-ahot" content="0.5">
  <meta name="aplus-rate-ahot-res" content="0.5">
  <meta name="data-spm" content="5176">

  <title>{{title}}</title>
  <script src="//cdn.bootcss.com/jquery/2.1.1/jquery.min.js"></script>
  <script src="//cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="//cdn.bootcss.com/tether/1.3.7/js/tether.min.js"></script>
  <link href="//cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <link href="//cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/layouts/public_layout_expert/bundle.css"> {{{_sections.appcss}}}
</head>

<body>
  <div class="public">
    <div class="head container">

      <span class="dropdown" style="margin-left:20px;">
            <span class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="false"><a>
              {{#if user.nickName}}
                  {{user.nickName}}
              {{else}}
                  {{user.name}}
              {{/if}}
              <i class="caret"> </i></a></span>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1" style="min-width: 140px;color: black;text-align: center">
        <li><a href="/myCourses" style="color: black">我的课程</a></li>
        <li role="separator" class="divider"></li>

        <li><a href="/personal?url=/personal" style="color: black">账号管理</a></li>
        <li role="separator" class="divider"></li>
        <li><a href="/messageCenter?type={{newMessage.type}}" style="color: black;">
                消息中心
                {{#if newMessage}}<span style="background-color:red;margin-right:0px;" class="badge">{{newMessage.count}}</span>{{/if}}
              </a></li>
        <li role="separator" class="divider"></li>
        <li><a href="/signout" style="color: black">注销</a></li>
      </ul>
      </span>

      <div>
        <a target="_blank"><img onclick="window.location.href='{{navigation.logolink}}'" src="{{navigation.logo}}" style="float:left;cursor:hand;height:30px;margin-top:5px;" /></a>
        <div style="width:1px;height:21px;background-color:#A8A8A8;float:left;margin-left:3px;align-items:center;margin-top:12px;"></div>
        <span style="float:left;font-size:18px;color:#A8A8A8;margin-left:2px;">用户中心</span>
      </div>
      <!--微信-->
      <!--<span class="weixin">
            <img src="/img/weixin.png" />
            <div class="headimgdiv">
              <img src="/img/qrcode.jpg"/>
            </div>
          </span>-->
      <!--<span class="spanone"><a href="{{config.vmoocUrl}}" target="_blank">云课堂</a></span>
      <span><a href="{{config.pspUrl}}/signin?fr=/myhome" target="_blank">企业云</a></span>
      <span><a href="{{config.pspUrl}}" target="_blank">LCPSP首页</a></span>-->
      {{#each navigation.topNav}}
        <span><a href="{{link}}" target="_blank">{{title}}</a></span>
      {{/each}}
    </div>
    <div class="menudiv">
      <div class="menu container">
        <div><img src="{{config.avatorUrl}}/uploadpic/{{user.Avatar}}"=="{{config.avatorUrl}}/uploadpic/" ? "img/prot.png":
            "{{config.avatorUrl}}/uploadpic/{{user.Avatar}}" class="prot" /></div>
        <span class="name">
              {{#if user.nickName}}
                  {{user.nickName}}
              {{else}}
                  {{user.name}}
              {{/if}}
            </span>
        <span class="platform">讲师端</span>
        <span class="change"><a href="/myCourses">切换</a></span>
        <span class="menuspan menuspanone"><a href="/courseManage" id="HomePage">我的课程</a></span>
        <span class="menuspan"><a href="/personal?url=/personal" id="personal">账号管理</a></span>
        <span class="menuspan"><a href="/messageCenter?type={{newMessage.type}}">
              消息中心
              {{#if newMessage}}<span style="background-color:red;" class="badge">{{newMessage.count}}</span>{{/if}}
        </a>
        </span>
      </div>
    </div>
    <div style="clear: both;"></div>
  </div>
  {{{body}}}
  <script src="/vendor.dll.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="//cdn.bootcss.com/babel-polyfill/6.23.0/polyfill.min.js"></script>
  <script>
    var socket = io('/', { transports: ['websocket', 'polling'] });
    {{#if user}}
    var guser = {{{jstringfiy user}}}
    {{/if}}
        var winPath = window.location.pathname;
        var personal = $('#personal')[0].pathname;
        var HomePage = $('#HomePage')[0].pathname;
        if (winPath == personal) {
          $('#personal').css("color", "#21BA10");
        } else if (winPath == HomePage) {
          $('#HomePage').css("color", "#21BA10");
        }
  </script>
  <script src="/layouts/public_layout_expert/bundle.js"></script>
  {{{_sections.appjs}}}
</body>
</html>