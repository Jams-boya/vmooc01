{
  "appenders": [
    {"type": "console"},
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "log/access.log",
          "pattern": "-yyyy-MM-dd",
          "category": "http"
        },
        {
          "type": "dateFile",
          "filename": "log/app.log",
          "pattern": "-yyyy-MM-dd",
          "category": "app"
        },
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "log/errors.log"
          }
        }
      ]
    }
  ]
}

