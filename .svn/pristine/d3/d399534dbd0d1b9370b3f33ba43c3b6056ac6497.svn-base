<html lang="zh">
  <head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="aplus-rate-ahot" content="0.5">
  <meta name="aplus-rate-ahot-res" content="0.5">
  <meta name="data-spm" content="5176">

  <title>{{title}}</title>
  <link href="//cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <script src="//cdn.bootcss.com/jquery/2.1.1/jquery.min.js"></script>
  <script src="//cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link href="//cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/layouts/public_layout_expert/bundle.css">
  {{{_sections.appcss}}}
  </head>

  <body>
    <div class="public">
      <div class="head container">
        <!--昵称-->
          <span class="dropdown" style="margin-left:20px;">
            <span class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="false"><a style="font-size:12px;">
              {{#if user.nickName}}
                  {{user.nickName}}
              {{else}}
                  {{user.name}}
              {{/if}}
              <i class="caret"> </i></a></span>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1" style="min-width: 140px;color: black;text-align: center;">
              <li><a href="/myCourses" style="color: black">我的课程</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/personal?url=/personal" style="color: black">账号管理</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/messageCenter?type={{newMessage.type}}" style="color: black;">
                消息中心
                {{#if newMessage}}<span style="background-color:red;margin-right: 0px;" class="badge">{{newMessage.count}}</span>{{/if}}
              </a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/signout" style="color: black">注销</a></li>
            </ul>
          </span>

        <div>
          <a target="_blank"><img class="p_index_logo" onclick="window.location.href='{{navigation.logolink}}'" src="{{navigation.logo}}" style="float:left;cursor:hand;height:30px;margin-top:5px;" /></a>
          <div style="width:1px;height:21px;background-color:#A8A8A8;float:left;margin-left:3px;align-items:center;margin-top:12px;"></div>
          <span style="float:left;font-size:18px;color:#A8A8A8;margin-left:2px;font-size:12px;">用户中心</span>
        </div>
        <!--微信-->
         <!--<span class="weixin">
            <img src="/img/weixin.png" />
            <div class="headimgdiv">
              <img src="/img/qrcode.jpg"/>
            </div>
          </span>-->
        <!--<span class="spanone"><a href="{{config.vmoocUrl}}" target="_blank" style="font-size:12px;">云课堂</a></span>
        <span><a href="{{config.pspUrl}}/signin?fr=/myhome" target="_blank" style="font-size:12px;">企业云</a></span>
        <span><a href="{{config.pspUrl}}" target="_blank" style="font-size:12px;">LCPSP首页</a></span>-->
        {{#each navigation.topNav}}
          <span><a href="{{link}}" target="_blank">{{title}}</a></span>
        {{/each}}
      </div>
      <div class="menudiv">
        <div class="menu container" id="menu">
          <div><img src="{{config.avatorUrl}}/uploadpic/{{user.Avatar}}" class="prot" /></div>
            <span class="name">
              {{#if user.nickName}}
                  {{user.nickName}}
              {{else}}
                  {{user.name}}
              {{/if}}
              </span>
            {{#if public}}
            {{#if user.isInstructor}}
              {{else}}
              <span class="platform">学生端</span>
              <span class="change"><a href="/teachersign/steps/">切换</a></span>
              {{/if}}
            {{else}}
            <span class="platform">学生端</span>
            {{/if}}
            {{#if public}}
            {{else}}
              {{#if user.isInstructor}}
                <span class="change"><a href="/courseManage">切换</a></span>
                {{else}}
                <span class="change"><a href="/teachersign/steps/">切换</a></span>
              {{/if}}
            {{/if}}
            <span class="menuspan menuspanone"><a href="/myCourses" id="HomePage">我的课程</a></span>
            <span class="menuspan"><a href="/personal?url=/personal" id="personal">账号管理</a></span>
            <span class="menuspan"><a href="/messageCenter?type={{newMessage.type}}" id="messageCenter">
              消息中心
              {{#if newMessage}}<span style="background-color:red;" class="badge">{{newMessage.count}}</span>{{/if}}
              </a>
            </span>
          </div>
        </div>
      <div style="clear: both;"></div>
    </div>
    {{{body}}}
    <script src="/vendor.dll.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="//cdn.bootcss.com/babel-polyfill/6.23.0/polyfill.min.js"></script>
    <script>
      var socket=io('/', { transports: ['websocket', 'polling'] });
      {{#if user}}
          var guser = {{{jstringfiy user}}}
      {{/if}}
      var userAvatar = $('.prot')[0].attributes[0].value;
      if(userAvatar == "//img/prot.png"){
        userAvatar = "/img/prot.png";
      }
      var winPath = window.location.pathname;
      var personal = $('#personal')[0].pathname;
      var HomePage = $('#HomePage')[0].pathname;
      // var userCenter = $('#userCenter').context.location.pathname;
      console.log(winPath)
      if(winPath == personal){
        $('#personal').css("color","#21BA10");
      }
      if(winPath == personal && !guser.isInstructor) {
        document.getElementsByClassName('platform')[0].style.display = "none";
        document.getElementsByClassName('change')[0].style.display = "none";
      } else if (winPath == HomePage) {
        $('#HomePage').css("color","#21BA10");
      } else if (winPath == '/messageCenter') {
        $('#messageCenter').css("color","#21BA10");
      }

    </script>
    <script src="/layouts/public_layout_expert/bundle.js"></script>
    {{{_sections.appjs}}}
  </body>
</html>